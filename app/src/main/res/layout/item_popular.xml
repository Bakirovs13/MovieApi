<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/popularImage"
        tools:src="@mipmap/ic_launcher"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="150dp"
        android:layout_height="200dp"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/PopularName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/popularImage"
        app:layout_constraintTop_toTopOf="@id/popularImage"
        tools:text="The Lost City" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/firstapperance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/popularImage"
        app:layout_constraintTop_toBottomOf="@id/PopularName_tv"
        tools:text="firstapperance" />
<TextView
        android:textColor="@color/white"
        android:id="@+id/created_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/popularImage"
        app:layout_constraintTop_toBottomOf="@id/firstapperance_tv"
        tools:text="created" />

<TextView
    android:ellipsize="end"
    android:maxLines="3"
        android:textColor="@color/white"
        android:id="@+id/bio_tv"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/popularImage"
        app:layout_constraintTop_toBottomOf="@id/created_tv"
        tools:text="created" />

</androidx.constraintlayout.widget.ConstraintLayout>